doctype html
html
    head
        title SneakChat Login by gwanwoodev
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.css')
        link(rel='stylesheet', href='css/all.min.css')
        link(rel='stylesheet', href='css/login.css')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        script(src='js/login.js')
    body
        #contents
            section.hero.is-dark.is-bold
                .container
                    h1.title UserLogin
            section.login-container
                .container
                    .columns
                        .box.column.is-8.is-offset-2
                            form(id="login", action="/login", method="post")
                                .control.has-icons-left.has-icons-right
                                    input(type="text", placeholder="username", class="input is-medium", name="username")
                                    span.icon.is-left
                                        i.far.fa-user
                                    span.icon.is-right
                                        i.fas.fa-check
                                .control.has-icons-left.has-icons-right
                                    input(type="password", placeholder="password", class="input is-medium" name="password")
                                    span.icon.is-left
                                        i.fas.fa-unlock-alt
                                    span.icon.is-right
                                        i.fas.fa-check
                                input(type="button", class="button is-success" value="Sign in", id="send")
                            .content.is-small.signup
                                a(href="/join") Not a member? Click here to join now!
                            